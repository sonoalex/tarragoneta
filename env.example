# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=False

# Secret Keys
SECRET_KEY=your-secret-key-here-change-in-production
SECURITY_PASSWORD_SALT=your-password-salt-here-change-in-production

# Database
# Railway will automatically provide DATABASE_URL
# For local development, use: sqlite:///tarragoneta.db
DATABASE_URL=sqlite:///tarragoneta.db

# Stripe (optional)
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Port (Railway sets this automatically)
PORT=5000

# Mail Configuration (Gmail)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USE_SSL=False
MAIL_USERNAME=hola@tarragoneta.com
MAIL_PASSWORD=your-google-app-password-here
MAIL_DEFAULT_SENDER=Tarragoneta <hola@tarragoneta.com>
# Set to True in development to suppress sending emails
MAIL_SUPPRESS_SEND=False

# Admin email for notifications
ADMIN_EMAIL=latarragoneta@gmail.com

# Admin user configuration (for initial setup only)
# Only used when creating admin user for the first time
ADMIN_USER_EMAIL=admin@tarragoneta.org
# In production, set a strong password here or create admin manually
ADMIN_PASSWORD=your-strong-admin-password-here

# Redis configuration for background jobs (email queue)
# Railway: Add Redis service and it will provide REDIS_URL automatically
# Or use Redis Cloud: REDISCLOUD_URL
REDIS_URL=redis://localhost:6379/0
# Enable email queue (set to False to send emails synchronously)
USE_EMAIL_QUEUE=True

# Server configuration for URL generation (needed for email templates)
# Railway automatically provides RAILWAY_PUBLIC_DOMAIN
# Or set SERVER_NAME manually (e.g., tarragoneta.railway.app or your custom domain)
SERVER_NAME=
PREFERRED_URL_SCHEME=https
APPLICATION_ROOT=/

# File Uploads
# Railway volume should be mounted at static/uploads (relative to project root)

