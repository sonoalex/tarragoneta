# Flask Configuration
# For local development, use:
FLASK_ENV=development
FLASK_DEBUG=True
# For production, use:
# FLASK_ENV=production
# FLASK_DEBUG=False

# Secret Keys
SECRET_KEY=your-secret-key-here-change-in-production
SECURITY_PASSWORD_SALT=your-password-salt-here-change-in-production

# Database
# Railway will automatically provide DATABASE_URL
# For local development with Docker (PostgreSQL + PostGIS):
DATABASE_URL=postgresql://tarracograf:tarracograf_dev@localhost:5432/tarracograf

# Stripe (optional)
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Reports Feature Flags
# Set to True to enable payment for reports, False to make them free
REPORTS_PAYMENT_ENABLED=False
REPORT_PRICE_EUROS=1.0

# Port (Railway sets this automatically)
PORT=5000

# Email Provider Configuration
# Options: 'smtp', 'console'
# In local development, use 'smtp' (recommended)
# In production, use 'smtp'
# Use 'console' only for testing (emails printed to console)
EMAIL_PROVIDER=smtp

# SMTP Configuration (Hostinger)
# Option 1: SSL (recommended) - Port 465
MAIL_SERVER=smtp.hostinger.com
MAIL_PORT=465
MAIL_USE_TLS=False
MAIL_USE_SSL=True
# Option 2: TLS - Port 587 (if SSL doesn't work)
# MAIL_SERVER=smtp.hostinger.com
# MAIL_PORT=587
# MAIL_USE_TLS=True
# MAIL_USE_SSL=False
MAIL_USERNAME=hola@tarracograf.cat
MAIL_PASSWORD=your-email-password-here
MAIL_DEFAULT_SENDER=Tarracograf <hola@tarracograf.cat>
# Set to True in development to suppress sending emails
MAIL_SUPPRESS_SEND=False
# Timeout for SMTP connection (in seconds)
MAIL_TIMEOUT=10

# Admin email for notifications
ADMIN_EMAIL=hola@tarracograf.cat

# Admin user configuration (for initial setup only)
# Only used when creating admin user for the first time
ADMIN_USER_EMAIL=hola@tarracograf.cat
# In production, set a strong password here or create admin manually
ADMIN_PASSWORD=your-strong-admin-password-here

# File Uploads
# Railway volume should be mounted at static/uploads (relative to project root)

# Celery Configuration (for async email sending)
# Redis broker URL (default: localhost for development)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
# Use Celery for async email sending (default: True)
# Set to False to send emails synchronously
USE_CELERY_FOR_EMAILS=True

# URL Generation for Emails (Flask standard configuration)
# SERVER_NAME: domain name for generating external URLs in emails
# In production, set to your domain (e.g., 'tarracograf.cat')
# In development, leave unset (or use 'localhost:5000')
# PREFERRED_URL_SCHEME: 'http' or 'https' (default: 'https' for production)
# Flask uses these to generate external URLs without a request context
# SERVER_NAME=tarracograf.cat
# PREFERRED_URL_SCHEME=https

