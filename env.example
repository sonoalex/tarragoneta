# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=False

# Secret Keys
SECRET_KEY=your-secret-key-here-change-in-production
SECURITY_PASSWORD_SALT=your-password-salt-here-change-in-production

# Database
# Railway will automatically provide DATABASE_URL
# For local development, use: sqlite:///tarragoneta.db
DATABASE_URL=sqlite:///tarragoneta.db

# Stripe (optional)
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Port (Railway sets this automatically)
PORT=5000

# Mail Configuration (Gmail)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USE_SSL=False
MAIL_USERNAME=hola@tarragoneta.com
MAIL_PASSWORD=your-google-app-password-here
MAIL_DEFAULT_SENDER=Tarragoneta <hola@tarragoneta.com>
# Set to True in development to suppress sending emails
MAIL_SUPPRESS_SEND=False

# File Uploads
# Railway volume should be mounted at static/uploads (relative to project root)

